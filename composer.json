{
    "name": "amicale-core/seb-api",
    "type": "project",
    "description": "Management of stocks, member, accounting, sales, ...",
    "license": "AGPL-3.0-or-later",
    "version": "2.3.0",
    "require": {
        "php": "^8.2",
        "amicale-core/seb-models": "dev-laravel11",
        "guzzlehttp/guzzle": "^7.5",
        "laravel/fortify": "^1.16",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.8",
        "laravel/ui": "^4.0",
        "nicmart/string-template": "^0.1.3"
    },
    "require-dev": {
        "spatie/laravel-ignition": "^2.0",
        "fakerphp/faker": "^1.21",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.4",
        "smgladkovskiy/phpcs-git-pre-commit": "dev-master",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "install-hooks": [
            "sh ./vendor/smgladkovskiy/phpcs-git-pre-commit/src/setup.sh"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "git@git.unistra.fr:clesecq/seb-models.git"
        }
    ]
}
